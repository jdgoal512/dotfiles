font pango:DejaVu Sans 8
set $mod mod1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier mod1

# Key bindings for launching applications
bindsym $mod+Return exec st -e tmux
bindsym $mod+t exec thunar
bindsym Mod4+t exec ~/.config/i3/toggle_touchpad
bindsym --release $mod+Escape exec xkill
bindsym $mod+d exec dmenu_run -fn 'Droid Sans Mono-12' -sb '#4B81AF'
bindsym $mod+space exec dmenu_run -fn 'Droid Sans Mono-12' -sb '#4B81AF'
bindsym mod4+space exec dmenu_run -fn 'Droid Sans Mono-12' -sb '#4B81AF'
bindsym mod4+semicolon exec i3lock

# kill focused window
bindsym $mod+Shift+q kill
bindsym mod1+F4 kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Change focus in Tmux
bindsym Mod4+h exec tmux select-pane -L
bindsym Mod4+j exec tmux select-pane -D
bindsym Mod4+k exec tmux select-pane -U
bindsym Mod4+l exec tmux select-pane -R

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+b split h
# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym Control+Mod1+Up exec ~/.config/i3/shift_workspace.sh desktop up
bindsym Control+Mod1+Down exec ~/.config/i3/shift_workspace.sh desktop down
bindsym Control+Mod1+Right exec ~/.config/i3/shift_workspace.sh desktop right
bindsym Control+Mod1+Left exec ~/.config/i3/shift_workspace.sh desktop left
bindsym Control+Mod1+k exec ~/.config/i3/shift_workspace.sh desktop up
bindsym Control+Mod1+j exec ~/.config/i3/shift_workspace.sh desktop down
bindsym Control+Mod1+l exec ~/.config/i3/shift_workspace.sh desktop right
bindsym Control+Mod1+h exec ~/.config/i3/shift_workspace.sh desktop left
bindsym $mod+Tab workspace next 
bindsym mod4+Tab exec ~/.config/i3/to_other_desktop

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
bindsym Control+Shift+Mod1+Up exec ~/.config/i3/shift_workspace.sh window up
bindsym Control+Shift+Mod1+Down exec ~/.config/i3/shift_workspace.sh window down
bindsym Control+Shift+Mod1+Right exec ~/.config/i3/shift_workspace.sh window right
bindsym Control+Shift+Mod1+Left exec ~/.config/i3/shift_workspace.sh window left
bindsym Control+Shift+Mod1+k exec ~/.config/i3/shift_workspace.sh window up
bindsym Control+Shift+Mod1+j exec ~/.config/i3/shift_workspace.sh window down
bindsym Control+Shift+Mod1+l exec ~/.config/i3/shift_workspace.sh window right
bindsym Control+Shift+Mod1+h exec ~/.config/i3/shift_workspace.sh window left

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Resize mode
# ------------
bindsym $mod+r exec "~/.config/i3/notify 'Resize Mode'; i3-msg mode resize"

mode "resize" {
        # Resize window
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        #Let the user know if they try to do something and they are still in resize mode
        bindsym Control+Shift+Mod1+Up exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Shift+Mod1+Down exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Shift+Mod1+Left exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Shift+Mod1+Right exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Mod1+Up exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Mod1+Down exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Mod1+Right exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Mod1+Left exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+$mod+q exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Shift+Mod1+k exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Shift+Mod1+j exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Shift+Mod1+h exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Shift+Mod1+l exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Mod1+k exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Mod1+j exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Mod1+l exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+Mod1+h exec ~/.config/i3/notify "You are in resize mode"
        bindsym Control+$mod+q exec ~/.config/i3/notify "You are in resize mode"

        # back to normal: Enter or Escape
        bindsym Return exec "~/.config/i3/notify 'Normal Mode'; i3-msg mode default"
        bindsym Escape exec "~/.config/i3/notify 'Normal Mode'; i3-msg mode default"
        bindsym q mode "default"
}

# Window Rules
# ------------

#for_window [class="^.*"] border normal
for_window [class=Lxterminal] border pixel 3
for_window [class=st-256color] border pixel 3
for_window [class=URxvt] border pixel 3
for_window [class=Tilix] border pixel 3
for_window [class=Opera] border pixel 3
for_window [class="com-sun-javaws-Main"] floating enable
for_window [class="VirtualBox"] floating enable
for_window [class="Unity" title="Hold on"] floating enable
for_window [class="Gsimplecal"] floating enable
#for_window [class="^.*"] border pixel 3

